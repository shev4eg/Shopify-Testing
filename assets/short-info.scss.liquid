.short-info {
  line-height: 1;
  font-size: 0;
	h1,
	.short-info-text {
		max-width: 1540px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
	}
	h1 {
    margin-bottom: 60px;
		max-width: 868px;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    @media only screen and (max-width: 1800px) {
      margin-bottom: 40px;
    }
    @media only screen and (max-width: 1200px) {
      margin-bottom: 32px;
    }
    @media only screen and (max-width: 767px) {
      margin-bottom: 16px;
    }
	}
}

.short-info:has(.short-info-decor) .short-info-inner {
  padding: 260px 0;
  @media only screen and (max-width: 1800px) {
    padding: 160px 0;
  }
  @media only screen and (max-width: 1200px) {
    padding: 110px 0;
  }
  @media only screen and (max-width: 767px) {
    padding: 65px 0;
  }
}

.short-info-inner {
  padding: 148px 0;
  @media only screen and (max-width: 1800px) {
    padding: 110px 0;
  }
  @media only screen and (max-width: 1200px) {
    padding: 80px 0;
  }
  @media only screen and (max-width: 767px) {
    padding: 32px 0;
  }
}

.short-info-text {
  color: #000;
  font-size: 48px;
  font-style: normal;
  font-weight: 400;
  line-height: 150%;
  letter-spacing: 0.48px;
  margin-bottom: 148px;
  @media only screen and (max-width: 1800px) {
    font-size: 32px;
    margin-bottom: 80px;
    letter-spacing: 0.2px;
  }
  @media only screen and (max-width: 1200px) {
    font-size: 20px;
  }
  @media only screen and (max-width: 767px) {
    font-size: 16px;
    margin-bottom: 32px;
    letter-spacing: 0.16px;
  }
}

.short-info-box {
  display: flex;
	column-gap: 64px;
  @media only screen and (max-width: 1800px) {
    column-gap: 32px;
  }
  @media only screen and (max-width: 1200px) {
    column-gap: 20px;
  }
  @media only screen and (max-width: 767px) {
    flex-direction: column;
    align-items: center;
    column-gap: 0;
		row-gap: 32px;
  }
}

.short-info-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  text-align: center;
	h3 {
    margin-bottom: 36px;
    @media only screen and (max-width: 767px) {
      margin-bottom: 20px;
    }
	}
}

.short-info-image {
	flex-shrink: 0;
  height: 665px;
  margin-bottom: 48px;
  width: 100%;
  @media only screen and (max-width: 1800px) {
    height: 463px;
    margin-bottom: 32px;
  }
  @media only screen and (max-width: 1200px) {
    height: 263px;
    margin-bottom: 20px;
  }
  @media only screen and (max-width: 767px) {
    height: 280px;
  }
	img {
    width: 100%;
    height: 100%;
		object-fit: cover;
		object-position: center;
	}
}

.short-info-decor {
  height: 128px;
  width: 100%;
  @media only screen and (max-width: 767px) {
    height: 102px;
  }
}

